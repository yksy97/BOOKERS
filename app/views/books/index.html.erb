<h1>投稿一覧</h1>

 <p>タイトル</p>

<%= @books.each do |book| %>


<tr>
      <th></th>
      <th> </th>
      <th>
        <%= link_to "show", "/show" %>
        <%= link_to "edit", edit_book_path(book.id) %>
        <%= link_to "destroy", "/new" %>
      </th>
    </tr>

<span><%= book.title %></span>
  
<% end %>






<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <h4><%= f.submit 'Create Book' %></h4>

<% end %>