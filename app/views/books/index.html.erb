<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>
        <%= link_to "show", book_path(book.id) %>
        <%= link_to "edit", edit_book_path(book.id) %>
        <%= link_to "destroy", book_path(book.id), method: :delete %>
      </th>
    </tr>
