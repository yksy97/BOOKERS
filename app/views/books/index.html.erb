<h1>Books</h1>

 <span><p>Title</p><p>Body</p><p> </p></span> 
 <!--ここのレイアウトを整える-->

<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <th><%= book.title %></th>
    </tr>
    <tr>
      <th><%= book.body %></th>
    </tr>
    <tr>
      <th>
        <%= link_to "show", book_path(book.id) %>
        <%= link_to "edit", edit_book_path(book.id) %>
        <%= link_to "destroy", book_path(book.id), method: :delete %>
      </th>
    </tr>
  </thead>
</table>
  
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <h4><%= f.submit 'Create Book' %></h4>

<% end %>