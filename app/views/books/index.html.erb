<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>    </th>
    </tr>
  </thead>
</table>

<% @books.each do |book| %>

<table>
  <thead>
    <tr>
      <td>
        ここに投稿した本のタイトル
      </td>
      <td>
        ここに投稿した本の内容
      </td>
      <td>
        <%= link_to "show", book_path(book.id) %>
        <%= link_to "edit", edit_book_path(book.id) %>
        <%= link_to "destroy", book_path(book.id), method: :delete %>
      </td>
    </tr>
  </thead>
</table>
  
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Body</h4>
  <%= f.text_area :body %>
  
  <h4><%= f.submit 'Create Book' %></h4>

<% end %>